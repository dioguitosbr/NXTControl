<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.controleremotolejos"
    android:versionCode="1"
    android:versionName="1.0" >
	<uses-permission android:name="android.permission.BLUETOOTH" />
	<uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo" 
		>
        <activity
            android:name="com.example.controleremotolejos.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" 
           >
     
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.controleremotolejos.AndroidBluetooth"
            android:label="Conectar"
            android:screenOrientation="landscape" 
           ></activity>
        <activity
            android:name="com.example.controleremotolejos.ListPairedDevicesActivity"
            android:label="Dispositivos Pareados"
            android:screenOrientation="landscape" 
           ></activity>
    </application>

</manifest>